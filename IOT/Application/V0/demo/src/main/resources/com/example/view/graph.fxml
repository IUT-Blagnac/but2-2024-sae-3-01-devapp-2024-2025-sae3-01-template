<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.GraphController"
      spacing="10" alignment="CENTER">
    <children>
        <Label text="Températures en Temps Réel" />
        <LineChart fx:id="temperatureChart" title="Température des Salles">
            <xAxis>
                <NumberAxis label="Temps (s)" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Température (°C)" />
            </yAxis>
        </LineChart>
    </children>
</VBox>