<Pane prefHeight="700.0" prefWidth="400.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="java_iot.view.AlertView">
   <children>
      <!-- Titre de la fenêtre -->
      <Label alignment="BOTTOM_CENTER" prefHeight="80.0" prefWidth="400.0" style="-fx-background-color: #1a1a1a; -fx-text-fill: #ffffff; -fx-padding: 10;" text="Alertes">
         <font>
            <Font name="Yu Gothic UI Semibold" size="36.0" />
         </font>
      </Label>

      <!-- ScrollPane pour les alertes -->
      <ScrollPane layoutX="20.0" layoutY="100.0" prefHeight="580.0" prefWidth="360.0" style="-fx-border-color: transparent;">
         <content>
            <!-- Conteneur VBox pour les alertes -->
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="570.0" prefWidth="340.0" style="-fx-border-color: transparent;">
               <children>
                  <VBox fx:id="alertList" layoutX="10.0" layoutY="15.0" prefHeight="550.0" prefWidth="320.0" spacing="20" style="-fx-padding: 10; ">
                     <!-- Exemple d'alerte (sera remplacé dynamiquement) -->
                  </VBox>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
   </children>
</Pane>
